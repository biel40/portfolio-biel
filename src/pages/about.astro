<style>
	/* Override layout styles para centrado completo */
	:global(main) {
		display: flex !important;
		flex-direction: column !important;
		align-items: center !important;
		justify-content: center !important;
		min-height: 100vh !important;
		width: 100% !important;
		max-width: 100% !important;
		margin: 0 !important;
		padding: 0 !important;
	}

	:global(article) {
		width: 100% !important;
		max-width: 1200px !important;
		display: flex !important;
		flex-direction: column !important;
		align-items: center !important;
		justify-content: center !important;
		margin: 0 auto !important;
		padding: 0 !important;
	}

	:global(.prose) {
		width: 100% !important;
		max-width: 100% !important;
		margin: 0 !important;
		padding: 0 !important;
		display: flex !important;
		flex-direction: column !important;
		align-items: center !important;
		justify-content: center !important;
	}

	:global(.title) {
		display: none !important;
	}

	:global(.hero-image) {
		display: none !important;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slideInFromLeft {
		from {
			opacity: 0;
			transform: translateX(-30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes slideInFromRight {
		from {
			opacity: 0;
			transform: translateX(30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.about-container {
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		max-width: 1200px;
		width: 100%;
		padding: 2em 1em;
		box-sizing: border-box;
		animation: fadeIn 2.5s ease-in-out;
	}

	.about-intro {
		text-align: center;
		margin-bottom: 1.5em;
		padding: 1.5em;
		background: linear-gradient(135deg, rgba(var(--gray-light), 0.3), rgba(255, 255, 255, 0.8));
		border-radius: 16px;
		box-shadow: var(--box-shadow);
		border: 1px solid rgba(var(--gray), 0.1);
		width: 100%;
	}

	.about-intro h2 {
		color: var(--accent);
		font-size: 2.2em;
		margin-bottom: 0.3em;
		font-weight: 700;
		animation: slideInFromLeft 2.8s ease-in-out;
	}

	.intro-subtitle {
		font-size: 1.1em;
		color: rgb(var(--gray-dark));
		margin: 0;
		font-weight: 500;
		animation: slideInFromRight 3.1s ease-in-out;
	}

	.about-content {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5em;
		width: 100%;
		animation: fadeIn 3.5s ease-in-out;
	}

	.about-card {
		background: rgba(255, 255, 255, 0.95);
		border-radius: 16px;
		padding: 2em 1.8em;
		box-shadow: var(--box-shadow);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 1px solid rgba(var(--gray), 0.1);
		position: relative;
		overflow: hidden;
		text-align: center;
	}

	.about-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: linear-gradient(90deg, var(--accent), var(--accent-dark));
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.about-card:hover {
		transform: translateY(-8px);
		box-shadow: 0 12px 40px rgba(var(--gray), 30%), 0 20px 60px rgba(var(--gray), 20%);
	}

	.about-card:hover::before {
		transform: scaleX(1);
	}

	.card-icon {
		width: 80px;
		height: 80px;
		margin: 0 auto 1.5em;
		background: linear-gradient(135deg, var(--accent), var(--accent-dark));
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		transition: transform 0.3s ease;
	}

	.about-card:hover .card-icon {
		transform: scale(1.1) rotate(5deg);
	}

	.about-card h3 {
		color: rgb(var(--black));
		font-size: 1.8em;
		margin-bottom: 1em;
		font-weight: 700;
		text-align: center;
	}

	.about-card p {
		color: rgb(var(--gray-dark));
		line-height: 1.7;
		font-size: 1.1em;
		text-align: center;
		margin: 0;
	}

	.image-section {
		display: flex;
		justify-content: center;
		align-items: center;
		margin: 1.5em 0;
	}

	.my-image-container {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		max-width: 400px;
	}

	.my-image {
		border-radius: 20px;
		width: 100%;
		max-width: 350px;
		height: auto;
		transition: all 0.3s ease;
		box-shadow: var(--box-shadow);
		border: 4px solid rgba(var(--accent), 0.1);
	}

	.my-image:hover {
		transform: scale(1.05);
		box-shadow: 0 20px 60px rgba(var(--gray), 40%);
	}

	.image-overlay {
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		background: linear-gradient(135deg, var(--accent), var(--accent-dark));
		color: white;
		padding: 0.8em 1.5em;
		border-radius: 25px;
		font-weight: 600;
		font-size: 1.1em;
		box-shadow: 0 8px 25px rgba(var(--accent), 0.3);
		transition: all 0.3s ease;
	}

	.image-overlay:hover {
		transform: translateX(-50%) translateY(-5px);
		box-shadow: 0 15px 35px rgba(var(--accent), 0.4);
	}

	.image-overlay p {
		margin: 0;
	}

	.interests-section {
		background: linear-gradient(135deg, rgba(var(--accent), 0.05), rgba(var(--accent-dark), 0.05));
		border-radius: 16px;
		padding: 2em 1.8em;
		border: 1px solid rgba(var(--gray), 0.1);
		margin-top: 0.5em;
	}

	.interests-section h3 {
		color: rgb(var(--black));
		font-size: 2em;
		margin-bottom: 1.5em;
		font-weight: 700;
		text-align: center;
	}

	.interests-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1.5em;
	}

	.interest-item {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1.5em 1em;
		background: rgba(255, 255, 255, 0.8);
		border-radius: 12px;
		transition: all 0.3s ease;
		border: 1px solid rgba(var(--gray), 0.1);
		cursor: default;
	}

	.interest-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(var(--gray), 25%);
		background: rgba(255, 255, 255, 1);
	}

	.interest-icon {
		font-size: 2.5em;
		margin-bottom: 0.5em;
		transition: transform 0.3s ease;
	}

	.interest-item:hover .interest-icon {
		transform: scale(1.2);
	}

	.interest-item span {
		color: rgb(var(--gray-dark));
		font-weight: 600;
		font-size: 1em;
		text-align: center;
	}

	/* Responsive Design */
	@media (min-width: 768px) {
		.about-content {
			grid-template-columns: repeat(3, 1fr);
			gap: 2em;
		}

		.image-section {
			grid-column: 1 / -1;
			order: 4;
		}

		.interests-section {
			grid-column: 1 / -1;
			order: 5;
		}

		.personal-info {
			order: 1;
		}

		.work-info {
			order: 2;
		}

		.education-info {
			order: 3;
		}
	}

	@media (max-width: 768px) {
		.about-container {
			padding: 1em;
		}

		:global(main) {
			min-height: auto !important;
		}

		.about-content {
			grid-template-columns: 1fr;
		}

		.about-intro {
			padding: 1.2em;
			margin-bottom: 1.2em;
		}

		.about-intro h2 {
			font-size: 1.9em;
		}

		.intro-subtitle {
			font-size: 1em;
		}

		.about-card {
			padding: 1.8em 1.5em;
		}

		.card-icon {
			width: 60px;
			height: 60px;
		}

		.about-card h3 {
			font-size: 1.5em;
		}

		.about-card p {
			font-size: 1em;
		}

		.my-image {
			max-width: 280px;
		}

		.interests-grid {
			grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
			gap: 1em;
		}

		.interest-item {
			padding: 1em 0.5em;
		}

		.interest-icon {
			font-size: 2em;
		}
	}

	@media (max-width: 480px) {
		.about-container {
			padding: 0.5em;
		}

		.about-intro h2 {
			font-size: 1.6em;
		}

		.intro-subtitle {
			font-size: 0.9em;
		}

		.about-card {
			padding: 1.5em 1em;
		}

		.my-image {
			max-width: 250px;
		}

		.interests-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
</style>
